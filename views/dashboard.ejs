<script>
  console.log('entering ajax run');
  const URL = "/project/users"
  var resArray = []
  $.ajax({
    url: URL,
    method: "GET"
  }).done(function(data) {
    console.log(data);
    window.resArray = data;
    console.log(data.users)
    data.users.forEach((item) => {
      $('#teammates').append('<option value="' + item._id + '">' + item.FirstName + " " + item.LastName + '</option>');
    });
  });
  console.log('leaving ajax run');
</script>
